{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": []
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": ["src/**/*", "next.config.js"],
  "exclude": ["node_modules", ".next", "out", "coverage"]
}
