{
  "name": "plg-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "metrics": "node scripts/plg-metrics.js",
    "metrics:json": "node scripts/plg-metrics.js --json",
    "test": "node --loader ../dm/facade/utils/test-loader.js test-runner.js",
    "test:lib": "node --loader ../dm/facade/utils/test-loader.js --test __tests__/unit/lib/*.test.js",
    "test:api": "node --loader ../dm/facade/utils/test-loader.js --test __tests__/unit/api/**/*.test.js",
    "test:middleware": "node --loader ../dm/facade/utils/test-loader.js --test __tests__/unit/middleware/*.test.js",
    "test:metrics": "node __tests__/unit/scripts/plg-metrics.test.js",
    "test:coverage": "node --loader ../dm/facade/utils/test-loader.js test-runner.js --coverage",
    "test:debug": "bash scripts/debug-tests.sh",
    "test:e2e": "node --loader ../dm/facade/utils/test-loader.js __tests__/e2e/runner.js",
    "test:e2e:staging": "E2E_ENV=staging node --loader ../dm/facade/utils/test-loader.js __tests__/e2e/runner.js",
    "test:e2e:journey": "node --loader ../dm/facade/utils/test-loader.js __tests__/e2e/runner.js --journey",
    "test:e2e:all": "node --loader ../dm/facade/utils/test-loader.js __tests__/e2e/runner.js --all"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.974.0",
    "@aws-sdk/client-dynamodb-streams": "^3.974.0",
    "@aws-sdk/client-lambda": "^3.974.0",
    "@aws-sdk/client-secrets-manager": "^3.978.0",
    "@aws-sdk/client-ses": "^3.974.0",
    "@aws-sdk/lib-dynamodb": "^3.974.0",
    "@aws-sdk/util-dynamodb": "^3.974.0",
    "@stripe/stripe-js": "^8.6.3",
    "aws-amplify": "^6.16.0",
    "aws-jwt-verify": "^5.1.1",
    "next": "16.1.4",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "stripe": "^20.2.0"
  },
  "devDependencies": {
    "@aws-amplify/backend": "^1.20.0",
    "@aws-amplify/backend-cli": "^1.8.2",
    "@tailwindcss/postcss": "^4",
    "aws-cdk-lib": "^2.234.1",
    "babel-plugin-react-compiler": "1.0.0",
    "constructs": "^10.4.5",
    "esbuild": "^0.27.2",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "glob": "^13.0.0",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "yaml": "^2.8.2"
  }
}
